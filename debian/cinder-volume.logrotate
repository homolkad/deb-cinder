/var/log/cinder/cinder-volume.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service cinder-volume restart >/dev/null 2>&1 || true
        else
            invoke-rc.d cinder-volume restart >/dev/null 2>&1 || true
        fi
    endscript
}
